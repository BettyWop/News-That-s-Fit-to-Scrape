<div class="container">
    <div class="col-md-12 jumbotron">
        <div class="text-center">
            <h1> Scrape that News</h1>
        </div>

    </div>
    <div class="col-md-12">
        {{#if article}}
            {{#each article}}
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4>{{this.title}}</h4>
                </div>
                <div class="panel-body">
                   
                    <a href= "https://www.cnn.com/{{this.link}}" target="_blank"> https://www.cnn.com/{{this.link}}</a>
                    <br><br>
                    <button type="button" class="btn btn-default save" data-id={{this._id}}>Save This</button>
                </div>
            </div>
            {{/each}}
        {{else}}
        <div class="panel panel-default">
            <div class="panel-body">
            <h4>It looks like we don't have any of the articles you're looking for.</h4>
            </div>
         </div>
        {{/if}}
    </div>
</div>